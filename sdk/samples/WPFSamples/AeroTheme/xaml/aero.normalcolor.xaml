        <Setter Property="FontWeight"
                Value="Bold"/>
    </Style>
    <Style x:Key="{x:Type Italic}"
           TargetType="{x:Type Italic}">
        <Setter Property="FontStyle"
                Value="Italic"/>
    </Style>
    <Style x:Key="{x:Type Underline}"
