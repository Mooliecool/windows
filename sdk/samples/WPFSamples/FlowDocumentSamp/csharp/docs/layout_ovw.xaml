&lt;Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Background="Wheat" Width="400" Height="200" ShowGridLines="true"> 
	&lt;Grid.ColumnDefinitions>
  &lt;ColumnDefinition/>
	&lt;ColumnDefinition/>
  &lt;/Grid.ColumnDefinitions>
  &lt;Grid.RowDefinitions>
	&lt;RowDefinition/>
	&lt;RowDefinition/>
  &lt;/Grid.RowDefinitions>
&lt;/Grid>
</Paragraph>
