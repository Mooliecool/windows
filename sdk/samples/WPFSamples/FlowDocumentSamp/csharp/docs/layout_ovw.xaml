  &lt;/Grid.RowDefinitions>
  &lt;Grid.ColumnDefinitions>
	&lt;ColumnDefinition Width="Auto"/>
  &lt;/Grid.ColumnDefinitions>
	&lt;Border BorderThickness="1" Padding="10" BorderBrush="Gray">
		&lt;TextBlock FontFamily="Verdana" FontSize="30">
			The New Workout Plan
		&lt;/TextBlock>
	&lt;/Border>
&lt;/Grid>
</Paragraph>
