    <LinearGradientBrush x:Key="CheckRadioFillNormal">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#FFD2D4D2"
                          Offset="0"/>
            <GradientStop Color="#FFFFFFFF"
                          Offset="1"/>
