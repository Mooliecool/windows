    </LinearGradientBrush>
    <LinearGradientBrush x:Key="CheckRadioStrokeNormal">
        <LinearGradientBrush.GradientStops>
            <GradientStop Color="#FF004C94"
                          Offset="0"/>
            <GradientStop Color="#FF003C74"
                          Offset="1"/>
        </LinearGradientBrush.GradientStops>
